PORT=3001
NODE_ENV=development

USE_DATABASE=true

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=requirement_platform
DB_CONNECTION_LIMIT=20
DB_QUEUE_LIMIT=0

REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true
REDIS_CACHE_TTL=300
REDIS_PREFIX=req_platform_

JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

CORS_ORIGIN=http://localhost:5173

CSRF_ENABLED=true
CSRF_SECRET=your_csrf_secret_change_this_in_production
CSRF_TOKEN_EXPIRE=3600

RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_IP_MAX_REQUESTS=200

PERFORMANCE_MONITORING_ENABLED=true
SLOW_REQUEST_THRESHOLD=500
REQUEST_LOGGING_ENABLED=true

CDN_ENABLED=false
CDN_BASE_URL=https://cdn.example.com

PAYMENT_RATE_LIMIT_ENABLED=true
PAYMENT_RATE_LIMIT_WINDOW=60
PAYMENT_MAX_REQUESTS=5
PAYMENT_CALLBACK_RATE_LIMIT=10

PAYMENT_SIGNATURE_ENABLED=true
PAYMENT_SIGNATURE_SECRET=your_payment_signature_secret_change_this_in_production
SIGNATURE_EXPIRE_TIME=300

SECURITY_LOGGING_ENABLED=true
SECURITY_LOG_FILE=logs/security.log

LOG_LEVEL=info

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

FRONTEND_URL=http://localhost:5173

ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_NOTIFY_URL=http://your-domain.com/api/alipay/notify
ALIPAY_RETURN_URL=http://your-domain.com/payment/result

WECHAT_PAY_APP_ID=your_wechat_app_id
WECHAT_PAY_MCH_ID=your_wechat_mch_id
WECHAT_PAY_API_KEY=your_wechat_api_key
WECHAT_PAY_API_V3_KEY=your_wechat_api_v3_key
WECHAT_PAY_SERIAL_NO=your_wechat_serial_no
WECHAT_PAY_PRIVATE_KEY=your_wechat_private_key_content
WECHAT_PAY_NOTIFY_URL=http://your-domain.com/api/wechat-pay/notify